/*
* Wizhi fields general styles.
*/
.wizhi-field-container
  > td
    > label
      display block

/*
* Wizhi radio field
*/
.wizhi-radio
  label
    display block

/*
* Wizhi editor field
*/
.wizhi-wp-editor
  .wp-editor-container
    background-color #ffffff

/*
* Wizhi fields classes.
* Styles for use in fields with text inputs.
*/
.wizhi-regular-text
  width 299px
  padding 3px
  border 1px solid #dfdfdf
  margin 1px
  height 158px

/*
* Styles for fields if metabox as a 'side' context.
*/
#side-sortables
  .wizhi-metabox
    .wizhi-label
      display block
      padding 5px 0 0

    .wizhi-field
      display block
      padding 15px 0 5px
